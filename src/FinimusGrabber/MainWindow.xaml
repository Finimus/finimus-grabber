<Window x:Class="FinimusGrabber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinimusGrabber"
        mc:Ignorable="d"
        Title="Finimus Grabber - Audio to MIDI" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open Audio File..." Click="OpenFile_Click"/>
                <Separator/>
                <MenuItem Header="Export MIDI..." Click="ExportMidi_Click" IsEnabled="{Binding HasNotes}"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="10">
        <StackPanel Orientation="Horizontal">
            <Button Content="Open File" Click="OpenFile_Click" Padding="10,5" Margin="0,0,10,0"/>
            
            <!-- Mode Switcher -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="3" Padding="5" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Mode:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <RadioButton Content="Automatic" GroupName="Mode" IsChecked="True" 
                                 Checked="AutomaticMode_Checked" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <RadioButton Content="Manual" GroupName="Mode" 
                                 Checked="ManualMode_Checked" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Button Content="Analyze" Click="Analyze_Click" Padding="10,5" Margin="0,0,10,0" 
                    IsEnabled="{Binding HasAudio}" x:Name="AnalyzeButton"/>
            
            <!-- AI Processing Tools -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="3" Padding="5" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="AI Tools:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="ðŸŽ¤ Isolate Vocals" Click="IsolateVocals_Click" Padding="8,5" Margin="0,0,5,0" 
                            IsEnabled="{Binding HasAudio}" ToolTip="Extract vocals from audio"/>
                    <Button Content="ðŸ¥ Isolate Drums" Click="IsolateDrums_Click" Padding="8,5" Margin="0,0,5,0" 
                            IsEnabled="{Binding HasAudio}" ToolTip="Extract drums from audio"/>
                    <Button Content="ðŸ”‡ Remove Noise" Click="RemoveNoise_Click" Padding="8,5" Margin="0,0,5,0" 
                            IsEnabled="{Binding HasAudio}" ToolTip="Suppress background noise"/>
                    <Button Content="â†» Reset" Click="ResetAudio_Click" Padding="8,5" 
                            IsEnabled="{Binding HasAudio}" ToolTip="Restore original audio"/>
                </StackPanel>
            </Border>
            
            <Button Content="Export MIDI" Click="ExportMidi_Click" Padding="10,5" 
                    IsEnabled="{Binding HasNotes}"/>
                    
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="20,0,0,0" 
                       Foreground="#666"/>
        </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Waveform Display -->
            <Border Grid.Row="0" BorderBrush="#CCC" BorderThickness="1" Background="White">
                <Grid>
                    <Canvas x:Name="WaveformCanvas" Background="White"/>
                    <TextBlock Text="Load an audio file to begin" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="#999"
                               Visibility="{Binding EmptyStateVisibility}"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="#CCC"/>

            <!-- Notes/Piano Roll Display -->
            <Border Grid.Row="2" BorderBrush="#CCC" BorderThickness="1" Background="White">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="PianoRollCanvas" Background="White" Width="1000" Height="400"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding FileInfo}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding NotesInfo}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
